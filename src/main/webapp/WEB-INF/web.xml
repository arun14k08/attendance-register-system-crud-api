<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.arun.controller.security.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.arun.controller.security.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>recordController</servlet-name>
    <servlet-class>com.arun.controller.record.RecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>recordController</servlet-name>
    <url-pattern>/records</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>studentController</servlet-name>
    <servlet-class>com.arun.controller.student.StudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>studentController</servlet-name>
    <url-pattern>/students</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>linkStudent</servlet-name>
    <servlet-class>com.arun.controller.student.LinkStudent</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>linkStudent</servlet-name>
    <url-pattern>/link-student</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>studentsAuth</filter-name>
    <filter-class>com.arun.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>studentsAuth</filter-name>
    <url-pattern>/students</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>recordsAuth</filter-name>
    <filter-class>com.arun.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>recordsAuth</filter-name>
    <url-pattern>/records</url-pattern>
  </filter-mapping>

  
</web-app>

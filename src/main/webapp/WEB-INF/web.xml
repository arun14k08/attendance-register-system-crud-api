<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>addStudent</servlet-name>
    <servlet-class>com.arun.controller.student.AddStudent</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addStudent</servlet-name>
    <url-pattern>/add-student</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>addRecord</servlet-name>
    <servlet-class>com.arun.controller.record.AddRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addRecord</servlet-name>
    <url-pattern>/add-record</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>editRecord</servlet-name>
    <servlet-class>com.arun.controller.record.EditRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>editRecord</servlet-name>
    <url-pattern>/edit-record</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>getAllRecords</servlet-name>
    <servlet-class>com.arun.controller.record.GetAllRecords</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getAllRecords</servlet-name>
    <url-pattern>/get-all-records</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>getRecord</servlet-name>
    <servlet-class>com.arun.controller.record.GetRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getRecord</servlet-name>
    <url-pattern>/get-record</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteRecord</servlet-name>
    <servlet-class>com.arun.controller.record.DeleteRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteRecord</servlet-name>
    <url-pattern>/delete-record</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getAllStudents</servlet-name>
    <servlet-class>com.arun.controller.student.GetAllStudents</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getAllStudents</servlet-name>
    <url-pattern>/get-all-students</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>editStudent</servlet-name>
    <servlet-class>com.arun.controller.student.EditStudent</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>editStudent</servlet-name>
    <url-pattern>/edit-student</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteStudent</servlet-name>
    <servlet-class>com.arun.controller.student.DeleteStudent</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteStudent</servlet-name>
    <url-pattern>/delete-student</url-pattern>
  </servlet-mapping>
</web-app>
